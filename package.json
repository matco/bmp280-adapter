{
	"name": "bmp280-adapter",
	"display_name": "BME280/BMP280",
	"version": "0.0.2",
	"description": "BME280/BMP280 sensor adapter for Mozilla WebThings Gateway",
	"author": "Matthieu Corageoud",
	"homepage": "https://github.com/matco/bmp280-adapter",
	"main": "index.js",
	"scripts": {
		"lint": "eslint ."
	},
	"keywords": [
		"mozilla",
		"iot",
		"adapter",
		"i2c",
		"bmp280"
	],
	"license": "Unlicense",
	"dependencies": {
		"bme280-sensor": "0.1.6"
	},
	"devDependencies": {
		"eslint": "^6.5.1"
	},
	"files": [
		"LICENSE",
		"SHA256SUMS",
		"bmp280-adapter.js",
		"index.js",
		"node_modules"
	],
	"moziot": {
		"api": {
			"min": 2,
			"max": 2
		},
		"plugin": true,
		"exec": "{nodeLoader} {path}",
		"config": {
			"scanInterval": 10,
			"sensors": [
				{
					"title": "bmp280 1",
					"description": "BMP280 n°1",
					"i2cBusNo": 0,
					"i2cAddress": "0x76",
					"isBME280": false
				}
			]
		},
		"schema": {
			"type": "object",
			"required": [
				"scanInterval"
			],
			"properties": {
				"scanInterval": {
					"type": "integer",
					"description": "Scan interval in seconds"
				},
				"sensors": {
					"type": "array",
					"items": {
						"type": "object",
						"description": "Configuration of a sensor",
						"required": [
							"title",
							"description",
							"i2cBusNo",
							"i2cAddress"
						],
						"properties": {
							"title": {
								"type": "string",
								"description": "Title (name) of the sensor"
							},
							"description": {
								"type": "string",
								"description": "Description of the sensor"
							},
							"i2cBusNo": {
								"type": "integer",
								"minimum": 0,
								"description": "I²C interface for the sensor"
							},
							"i2cAddress": {
								"type": "string",
								"description": "I²C address for the sensor (hexadecimal 0xFF)"
							},
							"isBME280": {
								"type": "boolean",
								"description": "Whether or not the sensor is a BME280, which also includes humidity readings"
							}
						}
					}
				}
			}
		}
	}
}
