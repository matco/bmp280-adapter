{
  "author": "Matthieu Corageoud",
  "description": "BME280/BMP280 sensor adapter for Mozilla WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/matco/bmp280-adapter",
  "id": "bmp280-adapter",
  "license": "Unlicense",
  "manifest_version": 1,
  "name": "BME280/BMP280",
  "options": {
    "default": {
      "scanInterval": 10,
      "sensors": [
        {
          "title": "bmp280 1",
          "description": "BMP280 n\u00b01",
          "i2cBusNo": 0,
          "i2cAddress": "0x76",
          "isBME280": false
        }
      ]
    },
    "schema": {
      "type": "object",
      "required": [
        "scanInterval"
      ],
      "properties": {
        "scanInterval": {
          "type": "integer",
          "description": "Scan interval in seconds"
        },
        "sensors": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Configuration of a sensor",
            "required": [
              "title",
              "description",
              "i2cBusNo",
              "i2cAddress"
            ],
            "properties": {
              "title": {
                "type": "string",
                "description": "Title (name) of the sensor"
              },
              "description": {
                "type": "string",
                "description": "Description of the sensor"
              },
              "i2cBusNo": {
                "type": "integer",
                "minimum": 0,
                "description": "I\u00b2C interface for the sensor"
              },
              "i2cAddress": {
                "type": "string",
                "description": "I\u00b2C address for the sensor (hexadecimal 0xFF)"
              },
              "isBME280": {
                "type": "boolean",
                "description": "Whether or not the sensor is a BME280, which also includes humidity readings"
              }
            }
          }
        }
      }
    }
  },
  "short_name": "BMP280",
  "version": "0.1.0"
}
