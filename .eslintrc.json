{
	"env": {
		"es2020": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"array-callback-return": "error",
		"consistent-return": "error",
		"curly": "error",
		"eol-last": "error",
		"eqeqeq": "error",
		"indent": ["error", "tab", {"SwitchCase": 1}],
		"key-spacing": "error",
		"linebreak-style": ["error", "unix"],
		"no-console": "off",
		"no-multi-spaces": "error",
		"no-multiple-empty-lines": "error",
		"no-new-wrappers": "error",
		"no-proto": "error",
		"no-undef": "error",
		"no-var": "error",
		"no-with": "error",
		"prefer-const": "error",
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"spaced-comment": ["error", "never"],
		"strict": "error"
	}
}
